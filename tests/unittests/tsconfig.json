{
    "compileOnSave": true,
    "compilerOptions": {
        "allowJs": true,
        "moduleResolution": "node",
        "target": "es2022",
        "module": "esnext", 
        "esModuleInterop": true,
        "removeComments": true,
        "noImplicitAny": true,
        "noEmit": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "strict": true,
        "alwaysStrict": true,
        "sourceMap": true,
        "declaration": true,
        "lib": [      
            "es2022"
        ]
    }
}