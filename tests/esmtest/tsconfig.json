{
    "compileOnSave": true,
    "compilerOptions": {
        "moduleResolution": "nodenext",
        "target": "ES2022",
        "module": "nodenext",
        "esModuleInterop": true,
        "removeComments": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "strict": true,
        "alwaysStrict": true,
        "sourceMap": false,
        "declaration": false,
        "lib": [      
            "ES2022"
        ]
    }
}