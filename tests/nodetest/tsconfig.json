{
    "compileOnSave": true,
    "compilerOptions": {
        "moduleResolution": "Node16",
        "target": "ES2022",
        "module": "Node16",
        "esModuleInterop": true,
        "removeComments": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "strict": true,
        "alwaysStrict": true,
        "sourceMap": false,
        "declaration": false,
        "lib": [      
            "dom",
            "ES2022"
        ],
    }
}