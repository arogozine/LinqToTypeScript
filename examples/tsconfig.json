{
    "compileOnSave": true,
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2022",
        "module": "ESNext",
        "esModuleInterop": true,
        "removeComments": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "strict": true,
        "alwaysStrict": true,
        "sourceMap": false,
        "declaration": false,
        "lib": [      
            "dom",
            "es2022",
        ],
        "importHelpers": false,
    }
}