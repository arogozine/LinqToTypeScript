{
    "compileOnSave": true,
    "compilerOptions": {
        "moduleResolution": "node",
        "target": "es2018",
        "module": "commonjs",
        "esModuleInterop": true,
        "removeComments": true,
        "noImplicitAny": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "noFallthroughCasesInSwitch": true,
        "strict": true,
        "alwaysStrict": true,
        "sourceMap": false,
        "declaration": false,
        "lib": [      
            "dom",
            "es2017",
            "esnext.asynciterable"
        ],
        "importHelpers": true,
    }
}